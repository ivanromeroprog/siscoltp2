{% extends 'base.html.twig' %}

{% block title %}SisVentas - Clientes
{% endblock %}
{% block bodytitle %}Clientes
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">
			{{ message }}
		</div>
	{% endfor %}
	<a href="{{ path('app_cliente_new') }}" class="btn btn-success">
		<i class="bi bi-plus-circle-fill"></i>
		Nuevo</a>
	<table class="table table-striped table-sm" id="tabla">
		<thead>
			<tr>
				{# <th>Id</th> #}
				<th>DNI</th>
				<th>Nombre</th>
				<th>Apellido</th>
				{# <th>Teléfono</th>
				                <th>Dirección</th> #}
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for cliente in clientes %}
				<tr>
					{# <td>{{ cliente.id }}</td> #}
					<td>{{ cliente.Dni }}</td>
					<td>{{ cliente.Nombre }}</td>
					<td>{{ cliente.Apellido }}</td>
					{# <td>{{ cliente.Telefono }}</td>
					                    <td>{{ cliente.Direccion }}</td> #}
					<td>
						<a href="{{ path('app_cliente_view',{'id':cliente.id}) }}" class="btn btn-primary btn-sm" title="Ver">
							<i class="bi bi-eye"></i>
						</a>
						<a href="{{ path('app_cliente_edit',{'id':cliente.id}) }}" class="btn btn-primary btn-sm" title="Editar">
							<i class="bi bi-pencil-fill"></i>
						</a>
						<a href="{{ path('app_cliente_delete',{'id':cliente.id}) }}" class="btn btn-danger btn-sm" title="Eliminar">
							<i class="bi bi-trash-fill"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
