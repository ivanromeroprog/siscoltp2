{% extends 'base.html.twig' %}

{% block title %}SisVentas - Usuarios
{% endblock %}
{% block bodytitle %}Usuarios
{% endblock %}

{% block body %}
	<a href="{{ path('app_usuario_new') }}" class="btn btn-success">
		<i class="bi bi-plus-circle-fill"></i>
		Nuevo</a>
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('error') %}
		<div class="alert alert-danger">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('warning') %}
		<div class="alert alert-warning">
			{{ message }}
		</div>
	{% endfor %}
	<table class="table table-striped table-sm" id="tabla">
		<thead>
			<tr>
				{# <th>Id</th> #}
				<th>Usuario</th>
				<th>Nombre</th>
				<th>Apellido</th>
				{# <th>Teléfono</th>
				                <th>Dirección</th> #}
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for usuario in usuarios %}
				<tr>
					{# <td>{{ cliente.id }}</td> #}
					<td>{{ usuario.username }}</td>
					<td>{{ usuario.Nombre }}</td>
					<td>{{ usuario.Apellido }}</td>
					{# <td>{{ cliente.Telefono }}</td>
					                    <td>{{ cliente.Direccion }}</td> #}
					<td>
						<a href="{{ path('app_usuario_view',{'id':usuario.id}) }}" class="btn btn-primary btn-sm" title="Ver">
							<i class="bi bi-eye"></i>
						</a>

						<a href="{{ path('app_usuario_edit',{'id':usuario.id}) }}" class="btn btn-primary btn-sm" title="Editar">
							<i class="bi bi-pencil-fill"></i>
						</a>
						<a href="{{ path('app_usuario_delete',{'id':usuario.id}) }}" class="btn btn-danger btn-sm" title="Eliminar">
							<i class="bi bi-trash-fill"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
