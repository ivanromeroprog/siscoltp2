{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}SisVentas - Productos
{% endblock %}
{% block bodytitle %}Eliminar Producto
{% endblock %}

{% block body %}
	<form action="{{ path('app_producto_dodelete') }}" method="POST">
		<div class="alert alert-danger">
			<p class="fw-bold">¿Está seguro de eliminar este Producto?</p>
		</div>
                {{ form(form) }}

		<input type="hidden" name="id" value="{{ producto.id }}"/>
		<input type="hidden" name="_method" value="DELETE"/>
		<input type="hidden" name="_token" value="{{ csrf_token('borrarcosa') }}"/>
		
			
			<input type="submit" value="Eliminar" class="btn btn-danger" style="float: right" /><a href="{{ path('app_producto') }}" class="btn btn-secondary">Volver</a>
		
	</form>
{% endblock %}
